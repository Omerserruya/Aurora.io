{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "baseUrl": ".",  
      "paths": {
        "@shared/*": ["./src/shared/*"],
      },
      "typeRoots": [
        "./src/types",
        "./node_modules/@types"
      ]
    },
    "lib": ["es2015"],
    "include": ["src/**/*"]
  }
  