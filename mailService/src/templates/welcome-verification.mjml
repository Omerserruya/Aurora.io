<mjml>
  <mj-head>
    <mj-title>Welcome to Aurora.io</mj-title>
    <mj-font name="Roboto" href="https://fonts.googleapis.com/css?family=Roboto" />
    <mj-attributes>
      <mj-all font-family="Roboto, Arial, sans-serif" />
      <mj-section padding="0" />
      <mj-column padding="0" />
    </mj-attributes>
    <mj-style>
      .body-section {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
      }
      .logo-container {
        text-align: center;
        padding: 32px 0 24px;
      }
      .logo {
        width: 120px;
        height: auto;
        border: 0;
        display: inline-block;
        max-width: 100%;
      }
      .footer-text {
        color: #666666;
        font-size: 13px;
        line-height: 1.5;
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#f8f9fa" width="600px">
    <mj-section css-class="body-section" padding="0 40px">
      <mj-column>
        <mj-raw>
          <div class="logo-container">
            <a href="https://aurora-io.cs.colman.ac.il/" style="text-decoration: none;">
              <img src="https://i.postimg.cc/3JqHx4m9/aurora-light.png" alt="Aurora.io Logo" class="logo" style="width: 120px; height: auto; border: 0; display: inline-block; max-width: 100%;" />
            </a>
          </div>
        </mj-raw>

        <mj-text font-size="28px" color="#1a1a1a" font-weight="bold" padding="0 0 24px 0" line-height="1.3">
          Welcome to Aurora.io!
        </mj-text>

        <mj-text font-size="16px" color="#4a4a4a" line-height="1.6" padding="0 0 24px 0">
          Hi {{name}},
        </mj-text>

        <mj-text font-size="16px" color="#4a4a4a" line-height="1.6" padding="0 0 24px 0">
          Thank you for joining Aurora.io! We're excited to have you on board. To get started, please verify your email address by clicking the button below:
        </mj-text>

        <mj-button background-color="#4A90E2" color="white" href="{{verificationUrl}}" padding="0 0 32px 0" border-radius="6px" font-weight="bold">
          Verify Email Address
        </mj-button>

        <mj-text font-size="14px" color="#666666" line-height="1.5" padding="0 0 24px 0">
          If the button doesn't work, you can also copy and paste this link into your browser:
        </mj-text>

        <mj-text font-size="14px" color="#4A90E2" line-height="1.5" padding="0 0 32px 0">
          {{verificationUrl}}
        </mj-text>

        <mj-divider border-color="#f0f0f0" padding="0 0 32px 0" />

        <mj-text font-size="14px" color="#666666" line-height="1.5" padding="0 0 16px 0">
          This link will expire in 24 hours. If you didn't create an account with Aurora.io, you can safely ignore this email.
        </mj-text>

        <mj-divider border-color="#f0f0f0" padding="0 0 32px 0" />

        <mj-text css-class="footer-text" align="center" padding="0 0 32px 0">
          Â© 2025 Aurora.io. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml> 